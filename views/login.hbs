                <a href="/login"><button class="btn bg-dark text-light px-3 " type="submit">Login</button></a>
                <a href="/register"><button class="btn bg-dark text-light px-3 mx-3" type="submit">Register</button></a>
                    
                <a href="/form"><button class="btn bg-dark text-light px-3" type="submit">Contact Me</button></a>
            </div>
        </div>
    </nav>
    <h1 class="text-center mt-5">FORM LOGIN</h1>

    <form class="container" style="width: 30rem;" action="/login" method="post">
        <div class="mb-3">
           {{#if messages.warning}}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <div>
            <i class="fa-solid fa-triangle-exclamation"></i>
            {{messages.warning}}
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {{/if}}
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail" class="form-label">Email</label>
          <input type="email" class="form-control" id="exampleInputEmail" name="inputEmail">
        </div>
        <div class="mb-3">
          <label for="inputPassword" class="form-label">Password</label>
          <input type="password" class="form-control" id="inputPassword" name="inputPassword">
        </div>
          <div class="d-flex justify-content-end">
       <button type="submit" class="btn btn-dark rounded-pill px-5 mt-5">Submit</button>
          </div>
      </form>
    



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
